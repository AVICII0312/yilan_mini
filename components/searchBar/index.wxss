/* components/searchBar/index.wxss */

.search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  height: 72rpx;
  padding: 0 30rpx;
  border-radius: 36rpx;
  border: 2rpx solid rgba(255, 255, 255, 1);
  background: rgba(255, 255, 255, 0.25);
}

.search-ipt, .search-ipt-ph {
  width: 568rpx;
  height: 68rpx;
  border: none;
  line-height: 68rpx;
  font-size: 28rpx;
  color: white;
}

.search-icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
  padding: 16rpx 0;
}