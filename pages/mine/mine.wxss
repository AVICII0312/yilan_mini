.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 0;
}

.header .via {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  margin-right: 50rpx;
  border: 2rpx solid #fff;
  border-radius: 60rpx;
}

.header .content {
  flex: 1;
}

.header .content .title {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #fff;
}

.header .content .subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #dedede;
}

.header .group {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.header .group .inform {
  position: relative;
  width: 48rpx;
  height: 48rpx;
}

.header .group .inform .badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(180deg, rgba(255, 128, 128, 1) 0%, rgba(255, 43, 43, 1) 100%);
  border-radius: 6rpx;
}

.header .setting {
  display: flex;
  align-items: center;
  margin-top: 38rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #dedede;
}

.header .setting .set {
  margin-right: 4rpx;
  width: 36rpx;
  height: 36rpx;
}

.section {
  margin-top: 20rpx;
  width: 690rpx;
  background: #fff;
  border-radius: 10rpx;
}

.section .head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #dedede;
  box-sizing: border-box;
}

.section .head .title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.section .head .subtitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999;
}

.section .head .subtitle .iconfont {
  margin: 0 0 0 10rpx;
}

.section .content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 40rpx;
}

.section .content .option {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.section .content .option .icon {
  width: 48rpx;
  height: 48rpx;
}

.section .content .option .title {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 500rpx;
  color: #666;
}

.section .no_collect {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 38rpx 0;
}

.section .no_collect image {
  margin-right: 24rpx;
  width: 96rpx;
  height: 96rpx;
}

.section .no_collect .explain {
  width: 252rpx;
  line-height: 36rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  font-weight: 400;
  color: #a65fcd;
}

.section .goods_group {
  padding: 0 30rpx;
}

.section .goods_group .good {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #dedede;
}

.section .goods_group .good:last-child {
  border: none;
}

.section_group {
  margin-top: 20rpx;
  margin-bottom: 200rpx;
  width: 690rpx;
  border-radius: 10rpx;
  background: #fff;
}

.section_group .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 34rpx 30rpx;
  width: 100%;
  border-bottom: 2rpx solid #dedede;
  box-sizing: border-box;
}

.section_group .row:last-child {
  border: none;
}

.section_group .row .title {
  display: flex;
  align-items: center;
}

.section_group .row .title .name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333;
}

.section_group .row .title .icon {
  margin-right: 14rpx;
  width: 36rpx;
  height: 36rpx;
}
