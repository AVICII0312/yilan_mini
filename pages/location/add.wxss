/* pages/location/add.wxss */

@import "../../utils/iconfont.wxss";
@import "../../components/templates/divButton.wxss";
.add-block {
  width: 630rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  border-radius: 10rpx;
  background: white;
}

.add-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
}

.add-block .add-item:first-child {
  border-bottom: 2rpx solid #DEDEDE;
}

.add-item-title {
  width: 112rpx;
  height: 100rpx;
  margin-right: 36rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #333333;
}

.add-item-val {
  flex: 1;
  height: 100rpx;
  border: none;
  color: #333333;
  line-height: 100rpx;
}

.add-item-val, .add-item-val-ph {
  font-size: 24rpx;
}

.add-item-val-ph {
  color: #CCCCCC;
}

.add-item-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-text {
  font-size: 24rpx;
  color: #333333;
}

.iconfont {
  font-size: 32rpx;
  color: #CCCCCC;
}

.div-button-gradient {
  position: fixed;
  right: 30rpx;
  bottom: 20rpx;
  left: 30rpx;
}