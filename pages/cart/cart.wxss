.edit {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.edit .icon {
    margin-right: 6rpx;
    width: 36rpx;
    height: 36rpx;
}

.edit .text {
    font-size: 24rpx;
    font-weight: 400;
    color: #fff;
}

.container {
    margin-top: 18rpx;
}

.checkbox {
    display: flex;
    align-items: center;
    padding: 40rpx 24rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background: #fff;
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
    /* 圆角 */
    width: 28rpx;
    /* 背景的宽 */
    height: 28rpx;
    /* 背景的高 */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border-color: #5A387A !important;
    background: #5A387A !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 16rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

.footer_group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    padding: 16rpx 30rpx 16rpx 50rpx;
    background: #fff;
}

.footer_group .radio {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.footer_group .radio .checkbox_group {
    width: 28rpx;
    padding: 0;
}

.footer_group .radio .text {
    margin-top: 6rpx;
    font-size: 16rpx;
    font-weight: 500;
    color: #999;
}

.footer_group .settlement {
    margin-left: 64rpx;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.footer_group .settlement .total {
    display: flex;
    align-items: center;
}

.footer_group .settlement .total .texttext {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
}

.footer_group .settlement .total .price {
    font-size: 32rpx;
    font-weight: bold;
    color: #FF0000;
}

.footer_group .settlement .button {
    padding: 16rpx 78rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: #fff;
    background: #5A387A;
    border-radius: 36rpx;
}

.footer_group .edit {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    font-weight: 500;
}

.footer_group .edit .secondary {
    padding: 16rpx 50rpx;
    margin-right: 20rpx;
    color: #5A387A;
    border: 2rpx solid #5A387A;
    border-radius: 36rpx;
}

.footer_group .edit .primary {
    padding: 16rpx 50rpx;
    background: #5A387A;
    color: #fff;
    border: 2rpx solid #5A387A;
    border-radius: 36rpx;
}

.vacancy {
    display: flex;
    flex-direction: column;    
    align-items: center;
    width: 690rpx;
    height: 640rpx;
    background: #fff;
    border-radius: 10px;
}

.vacancy .vacancy_img {
    margin-top: 158rpx;
    width: 144rpx;
    height: 144rpx;
}

.vacancy .text {
    margin-top: 18rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: #A65FCD;
}

.vacancy .button {   
    margin-top: 44rpx;
    padding: 18rpx 40rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: #fff;
    background: linear-gradient(90deg, rgba(166, 95, 205, 1) 0%, rgba(100, 60, 137, 1) 100%);
    border-radius: 48px;
}